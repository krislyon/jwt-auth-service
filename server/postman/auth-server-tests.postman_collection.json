							"    const responseJson = pm.response.json();",
							"    pm.expect( responseJson.auth_token).to.exist;",
							"    if( responseJson.auth_token ){",
							"        pm.collectionVariables.set(\"jwt_auth_token\", responseJson.auth_token );",
							"    }",
							"});"
