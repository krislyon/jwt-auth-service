				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test( \"Successful POST request\", () => {",
							"    pm.expect(pm.response.code).to.equal(200);",
							"});",
							"",
							"pm.test( \"auth_token field is properly returned in json body.\", () => {",
							"    const responseJson = pm.response.json();",
